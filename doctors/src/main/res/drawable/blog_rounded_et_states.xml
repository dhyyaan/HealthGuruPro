<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_window_focused="false" android:state_enabled="true"
        android:drawable="@drawable/rounded_edittext" />

    <item android:state_window_focused="false" android:state_enabled="false"
        android:drawable="@drawable/rounded_edittext" />

    <item android:state_pressed="true" android:drawable="@drawable/rounded_edittext" />

    <item android:state_enabled="true" android:state_focused="true" android:drawable="@drawable/rounded_edittext" />
    <item android:state_enabled="true" android:drawable="@drawable/rounded_edittext" />
    <item android:state_focused="true" android:drawable="@drawable/rounded_edittext" />
    <item android:drawable="@drawable/rounded_edittext" />
</selector>



