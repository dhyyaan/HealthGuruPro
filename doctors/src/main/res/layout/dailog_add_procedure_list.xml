<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
       xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingTop="12dp"
        android:paddingLeft="4dp"
        android:paddingRight="4dp"
        android:paddingBottom="4dp">

        <TextView
            android:id="@+id/tvAddProcedure"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:textAlignment="center"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="12dp"
            android:layout_marginStart="12dp"
            android:layout_marginRight="12dp"
            android:layout_marginEnd="12dp"
            android:textSize="14sp"
            android:textStyle="normal"
            android:typeface="normal"
            android:textColor="@android:color/black"
            android:text="@string/txt_add_new_procedure_list2" />

        <TextView
            android:id="@+id/tvProListName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/tvAddProcedure"
            android:textColor="#333333"
            android:textAllCaps="true"
            android:layout_marginLeft="12dp"
            android:layout_marginStart="12dp"
            android:layout_marginRight="12dp"
            android:layout_marginEnd="12dp"
            android:layout_marginTop="14dp"
            android:textSize="12sp"
            android:textStyle="normal"
            android:typeface="normal"
            android:text="@string/txt_procedure_list_name" />

        <EditText
            android:id="@+id/etPkgDetail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="12dp"
            android:layout_marginStart="12dp"
            android:layout_marginEnd="12dp"
            android:layout_marginRight="12dp"
            android:textSize="14sp"
            android:layout_marginTop="8dp"
            android:paddingBottom="10dp"
            android:typeface="normal"
            android:ems="10"
            android:textAllCaps="true"
            android:background="@drawable/edit_text_line_blue"
            android:textColor="@color/colorAccent"
            android:inputType="textPersonName"
            android:layout_below="@+id/tvProListName" />
        <LinearLayout
            android:orientation="horizontal"
            android:layout_marginLeft="12dp"
            android:layout_marginStart="12dp"
            android:layout_marginRight="12dp"
            android:layout_marginEnd="12dp"
            android:layout_marginTop="16dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/etPkgDetail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/llSublisting">
            <TextView
                android:id="@+id/tvAddSubListing"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#333333"
                android:textAllCaps="true"
                android:textSize="12sp"
                android:layout_weight="1"
                android:textStyle="normal"
                android:typeface="normal"
                android:text="@string/txt_add_sublisting" />
            <com.kyleduo.switchbutton.SwitchButton
                android:id="@+id/sb_add_sub_listing"
                style="@style/SwitchButtonStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:kswBackColor="@color/bright_turquoise"
                app:kswThumbColor="@android:color/white" />
        </LinearLayout>

        <RelativeLayout
            android:id="@+id/rlscv"
            android:layout_below="@+id/llSublisting"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <ScrollView
                android:id="@+id/scv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:id="@+id/llsl"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/tvSubListing"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="12dp"
                            android:layout_marginLeft="12dp"
                            android:layout_marginRight="12dp"
                            android:layout_marginStart="12dp"
                            android:layout_marginTop="9dp"
                            android:text="@string/txt_sublisting"
                            android:textSize="12sp"
                            android:textStyle="normal"
                            android:typeface="normal" />

                        <EditText
                            android:id="@+id/etSubListing"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentStart="true"
                            android:layout_below="@+id/tvSubListing"
                            android:layout_marginEnd="12dp"
                            android:layout_marginLeft="12dp"
                            android:layout_marginRight="12dp"
                            android:layout_marginStart="12dp"
                            android:layout_marginTop="8dp"
                            android:background="@drawable/edit_text_line_blue"
                            android:ems="10"
                            android:inputType="textPersonName"
                            android:paddingBottom="10dp"
                            android:textAllCaps="true"
                            android:textColor="@color/colorAccent"
                            android:textSize="14sp"
                            android:typeface="normal" />

                        <TextView
                            android:id="@+id/tvPrice"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentStart="true"
                            android:layout_below="@+id/etSubListing"
                            android:layout_marginEnd="12dp"
                            android:layout_marginLeft="12dp"
                            android:layout_marginRight="12dp"
                            android:layout_marginStart="12dp"
                            android:layout_marginTop="9dp"
                            android:text="@string/txt_price"
                            android:textAllCaps="true"
                            android:textSize="12sp"
                            android:textStyle="normal"
                            android:typeface="normal" />

                        <EditText
                            android:id="@+id/etPrice"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentStart="true"
                            android:layout_below="@+id/tvPrice"
                            android:layout_marginEnd="12dp"
                            android:layout_marginLeft="12dp"
                            android:layout_marginRight="12dp"
                            android:layout_marginStart="12dp"
                            android:layout_marginTop="8dp"
                            android:background="@drawable/edit_text_line_blue"
                            android:ems="10"
                            android:inputType="textPersonName"
                            android:paddingBottom="10dp"
                            android:textAllCaps="true"
                            android:textColor="@color/colorAccent"
                            android:textSize="14sp"
                            android:typeface="normal" />
                    </RelativeLayout>
                </LinearLayout>
            </ScrollView>
            <com.rafakob.drawme.DrawMeButton
                android:id="@+id/btnAddMore"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_marginEnd="12dp"
                android:layout_marginRight="12dp"
                android:layout_marginTop="4dp"
                android:textAllCaps="false"
                android:layout_below="@+id/scv"
                android:background="@color/colorAccent"
                android:text="@string/btn_add_more_plus"
                android:textAlignment="center"
                android:textColor="@android:color/white"
                app:dm_radius="4dp"
                android:textSize="12sp"
                app:dm_backColor="@color/colorAccent"
                app:dm_backColorPressed="@android:color/holo_red_dark"
                app:dm_backColorDisabled="@android:color/white"
                android:layout_marginLeft="8dp"
                android:layout_marginStart="8dp"
                android:layout_marginBottom="4dp" />
        </RelativeLayout>
        <EditText
            android:id="@+id/etTotalPrice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/rlscv"
            android:layout_marginLeft="12dp"
            android:layout_marginStart="12dp"
            android:layout_marginEnd="12dp"
            android:layout_marginRight="12dp"
            android:textSize="14sp"
            android:layout_marginTop="8dp"
            android:paddingBottom="10dp"
            android:typeface="normal"
            android:ems="10"
            android:textAllCaps="true"
            android:background="@drawable/edit_text_line_blue"
            android:textColor="@color/colorAccent"
            android:inputType="textPersonName"
            android:hint="@string/txt_price"/>
        <com.rafakob.drawme.DrawMeButton
            android:id="@+id/btnSubmit"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:textSize="12sp"
            android:text="@string/txt_btn_submit"
            android:textAlignment="center"
            android:textColor="@android:color/white"
            app:dm_backColor="@color/colorAccent"
            app:dm_backColorDisabled="@android:color/white"
            app:dm_backColorPressed="@android:color/holo_red_dark"
            app:dm_shapeRadiusHalfHeight="true"
            android:layout_marginTop="25dp"
            android:layout_marginBottom="10dp"
            android:layout_below="@+id/etTotalPrice"
            android:layout_alignLeft="@+id/etTotalPrice"
            android:layout_alignStart="@+id/etTotalPrice" />
      </RelativeLayout>
    </android.support.v4.widget.NestedScrollView>
