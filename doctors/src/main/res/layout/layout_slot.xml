<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:dm_stroke="1dp"
    app:dm_strokeColor="@color/colorAccent"
    app:dm_radius="2dp"
    android:padding="4dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <com.rafakob.drawme.DrawMeRelativeLayout
        android:id="@+id/llMorningSlot"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        app:dm_stroke="1dp"
        app:dm_strokeColor="@color/colorAccent"
        app:dm_radius="2dp"
        android:padding="4dp">

        <TextView
            android:id="@+id/tvMorSlotTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            android:layout_marginStart="4dp"
            android:paddingLeft="10dp"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:paddingRight="10dp"
            android:text="09-10"
            android:padding="4dp"
            android:textColor="@color/colorAccent"
            android:textSize="10sp" />
        <com.rafakob.drawme.DrawMeTextView
            android:id="@+id/drawMorCount"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginRight="4dp"
            android:layout_marginEnd="4dp"
            android:text="âœ“"
            android:gravity="center"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:textAlignment="center"
            android:textColor="@color/colorAccent"
            android:textSize="12sp"
            android:typeface="normal"
            app:dm_backColor="@color/bright_turquoise"
            app:dm_radius="28dp" />
    </com.rafakob.drawme.DrawMeRelativeLayout>

    <Space
        android:layout_width="8dp"
        android:layout_height="wrap_content" />

    <com.rafakob.drawme.DrawMeRelativeLayout
        android:layout_weight="1"
        android:id="@+id/llEveningSlot"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:dm_stroke="1dp"
        app:dm_strokeColor="@color/colorAccent"
        app:dm_radius="2dp"
        android:padding="4dp">

        <TextView
            android:id="@+id/tvEveSlotTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            android:layout_marginStart="4dp"
            android:paddingLeft="10dp"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:paddingRight="10dp"
            android:text="09-10"
            android:textColor="@color/colorAccent"
            android:padding="4dp"
            android:textSize="10sp" />

        <com.rafakob.drawme.DrawMeTextView
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:id="@+id/drawEveCount"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginRight="4dp"
            android:layout_marginEnd="4dp"
            android:text="3"
            android:gravity="center"
            android:textAlignment="center"
            android:textColor="@color/colorAccent"
            android:textSize="12sp"
            android:typeface="normal"
            app:dm_backColor="@color/bright_turquoise"
            app:dm_radius="28dp" />
    </com.rafakob.drawme.DrawMeRelativeLayout>
    </LinearLayout>
