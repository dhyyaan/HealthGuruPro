<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:background="@drawable/buttom_shadow"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tvslot1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:layout_marginStart="12dp"
            android:layout_marginTop="11dp"
            android:text="01.00 PM-02.00 PM"
            android:textAlignment="center"
            android:textSize="12sp"
            android:textColor="@android:color/black" />

        <com.rafakob.drawme.DrawMeTextView
            android:id="@+id/tvslot1Count"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginEnd="12dp"
            android:layout_marginRight="12dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:layout_alignParentRight="true"
            android:text="2"
            android:textSize="12sp"
            android:gravity="center"
            app:dm_radius="28dp"
            android:textColor="@color/colorAccent"
            app:dm_backColor="@color/bright_turquoise"
            android:textAlignment="center" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_below="@+id/tvslot1Count"
            android:background="#E1E1E1"
            android:id="@+id/view" />

        <TextView
            android:id="@+id/tvslot2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="02.00 PM-03.00 PM"
            android:textAlignment="center"
            android:textSize="12sp"
            android:layout_below="@+id/view"
            android:layout_marginTop="11dp"
            android:layout_marginLeft="12dp"
            android:layout_marginStart="12dp"
            android:textColor="@android:color/black" />

        <com.rafakob.drawme.DrawMeTextView
            android:id="@+id/tvslot2Count"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:text="1"
            android:gravity="center"
            app:dm_radius="28dp"
            android:textSize="12sp"
            android:layout_below="@+id/view"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:textColor="@color/colorAccent"
            app:dm_backColor="@color/bright_turquoise"
            android:layout_marginRight="12dp"
            android:layout_marginEnd="12dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="#E1E1E1"
            android:layout_below="@+id/tvslot2Count"
            android:id="@+id/view2" />


        <TextView
            android:id="@+id/tvslot3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="03.00 PM-04.00 PM"
            android:layout_marginTop="11dp"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:layout_below="@+id/view2"
            android:textSize="12sp"
            android:textColor="@android:color/black" />

        <com.rafakob.drawme.DrawMeTextView
            android:id="@+id/tvslot3Count"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:text="3"
            android:gravity="center"
            app:dm_radius="28dp"
            android:layout_below="@+id/view2"
            android:layout_alignParentRight="true"
            app:dm_backColor="@color/bright_turquoise"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:layout_marginLeft="0dp"
            android:layout_marginEnd="12dp"
            android:layout_marginRight="12dp"
            android:textSize="12sp"
            android:textColor="@color/colorAccent" />



    </RelativeLayout>


</layout>